# MELI Order Manager - Environment Variables Template
# Copy this file to .env and configure the variables for your environment
# DO NOT commit .env file to version control for security reasons

# =====================================
# COMMON ENVIRONMENT VARIABLES
# =====================================

# Spring Profile Configuration
SPRING_PROFILES_ACTIVE=dev

# =====================================
# DEVELOPMENT ENVIRONMENT VARIABLES
# =====================================

# Development Server Configuration
DEV_SERVER_PORT=8080

# Development Database Configuration
DEV_DATABASE_URL=jdbc:postgresql://localhost:5432/orderdb_dev
DEV_DATABASE_USERNAME=postgres
DEV_DATABASE_PASSWORD=postgres

# =====================================
# TESTING ENVIRONMENT VARIABLES
# =====================================

# Testing Server Configuration
TEST_SERVER_PORT=8081

# Testing Database Configuration
TEST_DATABASE_URL=jdbc:postgresql://localhost:5432/orderdb_test
TEST_DATABASE_USERNAME=postgres
TEST_DATABASE_PASSWORD=postgres

# =====================================
# PRODUCTION ENVIRONMENT VARIABLES
# =====================================

# Server Configuration
SERVER_PORT=8080
CONTEXT_PATH=/api/v1

# Production Database Configuration (REQUIRED for Production)
PROD_DATABASE_URL=jdbc:postgresql://localhost:5432/orderdb_prod
PROD_DATABASE_USERNAME=postgres
PROD_DATABASE_PASSWORD=your_secure_password_here
DB_POOL_SIZE=20
DB_MIN_IDLE=5
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000
DB_MAX_LIFETIME=1800000

# JPA/Hibernate Configuration
DDL_AUTO=validate

# Logging Configuration
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=INFO
LOG_FILE_PATH=logs/order-manager-prod.log
LOG_MAX_FILE_SIZE=10MB
LOG_MAX_HISTORY=30
LOG_TOTAL_SIZE_CAP=1GB

# =====================================
# SECURITY NOTES
# =====================================
# 1. Never commit actual passwords to version control
# 2. Use strong, unique passwords for production databases
# 3. Consider using secrets management tools in production
# 4. Rotate passwords regularly
# 5. Use environment-specific configurations

# =====================================
# DEPLOYMENT NOTES
# =====================================
# For production deployment:
# 1. Set DATABASE_PASSWORD as a secure environment variable
# 2. Configure your PostgreSQL database connection
# 3. Adjust logging levels as needed
# 4. Set appropriate server port and context path
# 5. Configure database connection pool settings based on your load