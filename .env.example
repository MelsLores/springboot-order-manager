# MELI Order Manager - Environment Variables Configuration
# Copy this file to .env and set your specific values

# =============================================================================
# GENERAL APPLICATION CONFIGURATION
# =============================================================================
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080
CONTEXT_PATH=/api/v1

# =============================================================================
# DEVELOPMENT ENVIRONMENT VARIABLES
# =============================================================================
DEV_DATABASE_URL=jdbc:postgresql://localhost:5432/postgres
DEV_DATABASE_USERNAME=postgres
DEV_DATABASE_PASSWORD=postgres
DEV_SERVER_PORT=8080

# =============================================================================
# TEST ENVIRONMENT VARIABLES
# =============================================================================
TEST_DATABASE_URL=jdbc:postgresql://localhost:5432/orderdb_test
TEST_DATABASE_USERNAME=postgres
TEST_DATABASE_PASSWORD=postgres
TEST_SERVER_PORT=8081

# =============================================================================
# PRODUCTION ENVIRONMENT VARIABLES (REQUIRED)
# =============================================================================
# Database Configuration
PROD_DATABASE_URL=jdbc:postgresql://prod-server:5432/orderdb_prod
PROD_DATABASE_USERNAME=orderapp
PROD_DATABASE_PASSWORD=<SECURE_PASSWORD_HERE>

# Database Pool Configuration
DB_POOL_SIZE=20
DB_MIN_IDLE=5
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000
DB_MAX_LIFETIME=1800000

# Hibernate Configuration
DDL_AUTO=validate

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=INFO
LOG_LEVEL_WEB=WARN
LOG_LEVEL_HIBERNATE=WARN
LOG_FILE_PATH=logs/order-manager.log
LOG_MAX_FILE_SIZE=10MB
LOG_MAX_HISTORY=30
LOG_TOTAL_SIZE_CAP=1GB

# =============================================================================
# SECURITY CONFIGURATION (PRODUCTION ONLY)
# =============================================================================
# JWT_SECRET=<YOUR_JWT_SECRET_HERE>
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
# SSL_ENABLED=true
# SSL_KEY_STORE_PATH=/path/to/keystore.p12
# SSL_KEY_STORE_PASSWORD=<KEYSTORE_PASSWORD>

# =============================================================================
# MONITORING AND ACTUATOR (OPTIONAL)
# =============================================================================
# MANAGEMENT_ENDPOINTS_ENABLED=true
# MANAGEMENT_SERVER_PORT=9090
# HEALTH_CHECK_ENABLED=true

# =============================================================================
# EXTERNAL SERVICES (IF APPLICABLE)
# =============================================================================
# REDIS_URL=redis://localhost:6379
# KAFKA_BOOTSTRAP_SERVERS=localhost:9092
# ELASTICSEARCH_URL=http://localhost:9200